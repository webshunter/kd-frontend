# Environment Variables untuk KD Frontend di Replit
# Kampung Digital Tangerang Selatan - UMKM Platform
# Copy file ini ke .env dan sesuaikan nilai-nilainya

# ===========================================
# BACKEND CONFIGURATION
# ===========================================
VITE_BACKEND_URL=https://kdtangsel.hubunk.id
VITE_API_URL=/api

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
VITE_FRONTEND_URL=http://localhost:5000
VITE_ALLOWED_HOSTS=tangsel.hubunk.id,kdtangsel.hubunk.id

# ===========================================
# NODE.JS CONFIGURATION
# ===========================================
NODE_ENV=development
NODE_OPTIONS=--max-old-space-size=4096

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
CI=false
DISABLE_ESLINT_PLUGIN=true

# ===========================================
# API KEYS (jika diperlukan)
# ===========================================
# GEMINI_API_KEY=your_gemini_api_key_here
# FIREBASE_API_KEY=your_firebase_api_key_here
# FIREBASE_AUTH_DOMAIN=your_firebase_auth_domain_here
# FIREBASE_PROJECT_ID=your_firebase_project_id_here

# ===========================================
# REPLIT SPECIFIC SETTINGS
# ===========================================
# Port untuk development server
PORT=5000

# Host untuk development server
HOST=0.0.0.0

# Enable hot reload
VITE_HMR=true

# ===========================================
# DEBUGGING SETTINGS
# ===========================================
# Enable debug mode
DEBUG=false

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# ===========================================
# CORS SETTINGS
# ===========================================
# CORS origins yang diizinkan
CORS_ORIGINS=http://localhost:5000,https://your-replit-url.replit.app

# ===========================================
# CACHE SETTINGS
# ===========================================
# Enable caching
ENABLE_CACHE=true

# Cache TTL (Time To Live) dalam detik
CACHE_TTL=3600

# ===========================================
# NOTIFICATION SETTINGS
# ===========================================
# Enable notifications
ENABLE_NOTIFICATIONS=true

# Notification sound
NOTIFICATION_SOUND=true

# ===========================================
# THEME SETTINGS
# ===========================================
# Default theme (light, dark, auto)
DEFAULT_THEME=light

# Enable theme switching
ENABLE_THEME_SWITCH=true

# ===========================================
# PERFORMANCE SETTINGS
# ===========================================
# Enable performance monitoring
ENABLE_PERFORMANCE_MONITORING=true

# Bundle analyzer
ANALYZE_BUNDLE=false

# ===========================================
# SECURITY SETTINGS
# ===========================================
# Enable security headers
ENABLE_SECURITY_HEADERS=true

# Content Security Policy
CSP_REPORT_URI=/api/csp-report

# ===========================================
# MONITORING SETTINGS
# ===========================================
# Enable error tracking
ENABLE_ERROR_TRACKING=true

# Error tracking endpoint
ERROR_TRACKING_ENDPOINT=/api/errors

# ===========================================
# FEATURE FLAGS
# ===========================================
# Enable experimental features
ENABLE_EXPERIMENTAL_FEATURES=false

# Enable beta features
ENABLE_BETA_FEATURES=false

# ===========================================
# CUSTOM SETTINGS
# ===========================================
# Custom configuration
CUSTOM_CONFIG={}

# ===========================================
# NOTES
# ===========================================
# 1. Semua variabel yang dimulai dengan VITE_ akan tersedia di frontend
# 2. Variabel lain hanya tersedia di server/backend
# 3. Jangan commit file .env ke repository
# 4. Gunakan Replit Secrets untuk data sensitif
# 5. Restart Replit setelah mengubah environment variables
